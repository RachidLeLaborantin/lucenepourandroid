<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageDeRecherche">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/champDeRecherche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:inputType="text"
        android:queryHint="Entrez des mots clés pour lancer la vérification"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/blocResultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/champDeRecherche"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tTempsDR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tempsDeRecherche"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/cTempsDR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tTempsDR"
            app:layout_constraintTop_toBottomOf="@id/champDeRecherche"
            android:textColor="@color/noir"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/blocNombreTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/blocResultat">
        <TextView
            android:id="@+id/tnombreTR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/champDeRecherche"
            app:layout_constraintStart_toEndOf="@id/cTempsDR"
            android:text="@string/nombreTotalResultat"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/cnombreTR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tnombreTR"
            app:layout_constraintTop_toBottomOf="@id/champDeRecherche"
            android:textColor="@color/noir"
            android:textSize="15sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/boutonReconstruireIndex"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/blocNombreTotal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Reconstruire un nouvel index"
        android:layout_marginTop="15dp"
        android:background="#855fd5"
        android:textColor="#ffffff"/>


    <LinearLayout
        android:id="@+id/vuesRestantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/boutonReconstruireIndex">

        <TextView
            android:id="@+id/etatDuTexte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Bienvenue sur Detplagi ! Bonne utilisation"
            android:textSize="15sp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listeDeResultats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/boutonReconstruireIndex"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:choiceMode="singleChoice"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>